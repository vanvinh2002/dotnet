@using System.Data

<div class="table-responsive mt-2">

    <table class="table table-bordered table-sm">
        <thead class="table-success text-center">
            <tr>
                <th>Loại ca</th>
                <th>Ngày</th>
                <th>Ca</th>
                <th>Nơi làm</th>
                <th>Vị Trí</th>
                <th>Nhận ca</th>
                <th>
                    Chọn
                    <input type="checkbox" id="checkall" name="check" onchange="checkall()" />
                </th>
            </tr>
        </thead>
        <tbody>

            @{
                if (Model != null)
                {
                    var dt = Model as DataTable;
                    if (dt.Rows.Count > 0)
                    {
                        var i = 0;
                        foreach (DataRow item in dt.Rows)
                        {
                            <tr id="row_@i">
                                <td class="text-left" style="width:65px; max-width: 65px;  overflow: hidden;white-space: nowrap">
                                    @item["LoaiCa"]
                                </td>
                                <td class="text-left" style="width: 100px; max-width: 100px;  overflow: hidden;white-space: nowrap">
                                    @item["Ngay"]
                                </td>
                                <td class="text-right" style="width: 40px; overflow: hidden; white-space: nowrap">
                                    @item["Ca"]
                                </td>
                                <td class="text-right" style="width: 40px; overflow: hidden; white-space: nowrap">
                                    @item["NoiLam"]
                                </td>
                                <td class="text-left" style="width: 40px; max-width: 40px;  overflow: hidden;white-space: nowrap">
                                    @item["TenPB"]
                                </td>
                                <td class="text-left" style="width: 40px; max-width: 40px;  overflow: hidden;white-space: nowrap">
                                    @item["NhanCa"]
                                </td>
                                <td class="text-left" style="width: 40px; max-width: 40px;">
                                    <input id="_@i" name="check[]" type="checkbox" value="@item["Ca"]" onchange="" />
                                </td>
                            </tr>
                            i++;
                        }
                    }
                }
            }
        </tbody>
    </table>
</div>
<script>
    function checkall() {
        var cboxes = document.getElementsByName('check[]');
        for (var i = 0; i < cboxes.length; i++) {
            if ($('#checkall').is(":checked")) {
                cboxes[i].checked = true;
            }
            else {
                cboxes[i].checked = false;
            }
        }
    }
</script>