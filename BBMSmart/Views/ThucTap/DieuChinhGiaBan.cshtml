    function ActiveTab(r) {
        if (r == "Tab01") {

            $('.conten02').hide();
            $('.conten01').show();


            $('.Tab02').removeClass("active");
            $('.conten01').removeClass("active");
            $('.Tab01').addClass("active");
            js_GetListtt1();
        }
        else if (r == "Tab02") {
            $('.conten01').hide();
            $('.conten02').show();

            $('.Tab01').removeClass("active");

            $('.conten02').removeClass("active");
            $('.Tab02').addClass("active");
            js_GetListtt2();
        }
    }
    function js_GetListtt1() {

        var Category = $("#Category").val();
        var Function = $("#Function").val();
        var Brand = $("#Brand").val();
        var MaHang = $("#MaHang").val();
        $.ajax({
            url: '/ThucTap/ListDCGB',
            type: 'POST',
            data: JSON.stringify({ Category: Category, Function: Function, Brand: Brand, MaHang: MaHang }),
            contentType: 'application/json, charset=utf-8',
            beforeSend: function () {
                js_Loading(true, 1);
            },
            success: function (data) {
                console.log(data);
                $('#div-content').html(data);
                js_ReloadTable();
                js_Loading(false, 1);
            },
            error: function () {
                js_Loading(false, 1);
            }
        });
    }

    function js_GetListtt2() {

        var Category = $("#Category1").val();
        var Function = $("#Function1").val();
        var Brand = $("#Brand1").val();
        var MaHang = $("#MaHang1").val();
        $.ajax({
            url: '/ThucTap/ListDuyetDCGB',
            type: 'POST',
            data: JSON.stringify({ Category: Category, Function: Function, Brand: Brand, MaHang: MaHang }),
            contentType: 'application/json, charset=utf-8',
            beforeSend: function () {
                js_Loading(true, 1);
            },
            success: function (data) {
                console.log(data);
                $('#div-content1').html(data);
                js_ReloadTable1();
                js_Loading(false, 1);
            },
            error: function () {
                js_Loading(false, 1);
            }
        });
    }


    function js_approve() {
        // debugger;
       
        var cboxes = document.getElementsByName('check[]');
        var arrCheckbox = [];
        var i = 0;
        for (var i = 0; i < cboxes.length; i++) {
            if (cboxes[i].checked) {
                if ($('#GiaDieuChinh' + cboxes[i].id).val().length > 0 && $('#GiaKhaoSat' + cboxes[i].id).val().length > 0 && $('#ngayapdung' + cboxes[i].id).val().length > 0) {
                    var dc = {};
                    dc.ID = cboxes[i].value;
                    dc.GiaDieuChinh = $('#GiaDieuChinh' + cboxes[i].id).val();
                    dc.GiaKhaoSat = $('#GiaKhaoSat' + cboxes[i].id).val();
                    dc.ngayapdung = $('#ngayapdung' + cboxes[i].id).val();
                    console.log(dc);
                    arrCheckbox.push(dc);
                } else {
                    alert("Vui lòng nhập đủ thông tin");
                }              
            }
        }
        console.log('1');

        console.log(arrCheckbox);

        if (arrCheckbox.length == 0) {
            alert("Vui lòng chọn ít nhất 1 bản ghi.");
            $('#myModal1').modal('hide');
            return;
            }

        console.log('2');
        if (arrCheckbox.length > 0) {
            $.ajax({
                url: '/ThucTap/UpdateStatus',
                type: 'POST',
                data: JSON.stringify({ lst: arrCheckbox }),
                contentType: 'application/json, charset=utf-8',
                beforeSend: function () {
                    js_Loading(true, 1);
                },
                success: function (data) {
                    if (data == 1) {
                        alert("Điều chỉnh thành công");
                        $('#myModal1').modal('hide');
                        js_GetListtt1();
                        js_Loading(false, 1);
                    }
                },
                error: function () {
                    js_Loading(false, 1);
                }

            });
            }

    }
    function js_DuyetBang() {
        var cboxes1 = document.getElementsByName('check1[]');
        var arrCheckbox = [];
        var i = 0;
        for (var i = 0; i < cboxes1.length; i++) {
            if (cboxes1[i].checked) {
                var dc = {};
                dc.ID = cboxes1[i].value;
                console.log(dc);
                arrCheckbox.push(dc);
            }
        }
