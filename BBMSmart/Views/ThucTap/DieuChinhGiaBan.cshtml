    function js_ReloadTable() {
        $('#tbl_Item')
            .DataTable({
                lengthMenu: [[5, 10, 50, 70, 100, -1], [5, 10, 50, 70, 100]],
                columnDefs: [],
                autoWidth: false,
                "searching": false,
                order: [[0, "desc"]],
                "pageLength": 30
            });

    }
    function js_ReloadTable1() {
        $('#tbl_Item_1')
            .DataTable({
                lengthMenu: [[5, 10, 50, 70, 100, -1], [5, 10, 50, 70, 100]],
                columnDefs: [],
                autoWidth: false,
                "searching": false,
                order: [[0, "desc"]],
