    <script type="text/javascript">
        $(window).load(function () {
            $('#txtSearch').val('@ViewBag.fillData');
        });


        $(function () {
            $('#txtSearch').keydown(function (e) {
                if (e.keyCode == 13) {
                    fnPagesize();
                }
            });
        });

        function fnPagesize() {
            window.location.href = "/StoreLayout/Index?fillData=" + $('#txtSearch').val() +"&storeNo=@ViewBag.st_info.storeNo";
        }

        function fnDetail(str_shlNo) {
            if (@ViewBag.role.accept_act== 1) {
                window.location.href = "/StoreShelf/Detail?id=" + str_shlNo;
