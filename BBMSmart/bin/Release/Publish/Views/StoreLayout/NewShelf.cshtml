<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
<script type="text/javascript">
        $(window).load(function () {

            loadItem();
        });

        function fnPagesize() {
            window.location.href = "/StoreLayout/StoreList?fillData="+$('#txtSearch').val();
        }

        function fnShelfList(str_stNo) {
            window.location.href = "/StoreLayout/ShelfList?storeNo=" + str_stNo;
        }

        //Upload file
        $(document).ready(function () {
            //validating uploaded file whether it is Excel or not while uploading
            $("#fileUpload").change(function () {
                //fileErrorMessage.innerHTML = '';
                var vtrUpload = $("#fileUpload").val().toLowerCase();
                var regexVTRUpload = new RegExp("(.*?)\.(png|jpg|jpeg)$");
                if (!(regexVTRUpload.test(vtrUpload))) {
                    $("#fileUpload").val("");

                    alert("file false");
                } else {
                    UploadFile();
                }
            });
        });

        function UploadFile() {
            var data = new FormData();
            var files = $("#fileUpload").get(0).files;
            if (files.length > 0) {
                data.append("MyImages", files[0]);
            }

            $.ajax({
                url: "/StoreLayout/uploadImg",
                type: "POST",
                processData: false,
                contentType: false,
                data: data,
                success: function (data) {

                    console.log(data);

                    //var sub = JSON.parse(data);
                    console.log(data.link);
                    if (data.code == 0) {
                        img_link = data.link;
                        $('#txt_srcImg').val(data.link);
                        $('#real_img').attr("onclick", "fn_detail('" + data.link + "')");
                    }

                },
                error: function (er) {
                    alert(er);
                }

            });

        }

        function fnSave() {

            if ($('#txt_srcImg').val().length > 0) {
                var it_pdt = new Object();

                it_pdt.storeNo = '@ViewBag.storeNo';
                it_pdt.shelfNo = '@ViewBag.shelf.shelfNo';
                it_pdt.catNo = '@ViewBag.shelf.catNo';
                it_pdt.sub_id = '@ViewBag.shelf.sub_id';
                it_pdt.img_link = $('#txt_srcImg').val();

                $.ajax({
                    type: "POST",
                    url: "/StoreLayout/addShelf",
                    data: JSON.stringify(it_pdt),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (r1) {
                        //var sub = JSON.parse(r1);
                        if (r1.length > 0) {
                            window.location.href = '/StoreLayout/DraftList?storeNo=@ViewBag.storeNo';
                        } else {
                            alert("Có lỗi xảy ra thử lại sau!");
                        }
                    }
                });
            } else {
                alert("Chưa đăng ảnh thực tế tại cửa hàng!");
            }
        }

        function loadItem() {

            $("#tblReceivables > TBODY").html("");

            $.ajax({
                type: "POST",
                url: "/StoreLayout/getProduct",
                data: '{cID:"' + @ViewBag.shelf.catNo + '"}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    if (r.length > 0) {

                        $('#cID').val(str_cID);

                        var rt = JSON.parse(r);

                        for (var i in rt) {
                            var tBody = $("#tblReceivables > TBODY")[0];

                            //Add Row.
                            var row = tBody.insertRow(-1);

                            //Add Type cell
                            cell = $(row.insertCell(-1));
                            cell.html(rt[i].sku);

                            //Add Type cell
                            cell = $(row.insertCell(-1));
                            cell.html(rt[i].name);

                            //Add Type cell
                            cell = $(row.insertCell(-1));
                            cell.html(rt[i].price);

                            //Add Type cell
                            //cell = $(row.insertCell(-1));
                            //cell.html(rt[i].image_link);

                            //Add Button cell.
                            cell = $(row.insertCell(-1));
                            //var btnRemove = $("<a/>");
                            //btnRemove.attr("data-toggle", "modal");
                            //btnRemove.attr("onclick", "fn_detail('" + rt[i].image_link + "')");
                            //btnRemove.attr("data-target", "#modalDetails");
                            //btnRemove.html("Chi tiết");

                            var btnRemove = $("<img/>")
                            btnRemove.attr("src", rt[i].image_link);
                            btnRemove.attr("style", "width:100%");
                            cell.append(btnRemove);
                        }

                    } else {
                        alert("Không tìm thấy dữ liệu phù hợp!");
                    }
                }
            });
        }

        function fn_detail(str_img) {
            $('#imgsrc').attr("src", str_img);
        }

</script>

